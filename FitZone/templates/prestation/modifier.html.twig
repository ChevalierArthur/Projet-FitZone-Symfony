{% extends 'base.html.twig' %}

{% block title %}Prestations{% endblock %}

{% block body %}
{% if app.user and is_granted('ROLE_ADMIN') %}
<div class="titre-Accueil">
    <h1 >Nos Prestations</h1>
</div>
<div class="prestations">
{% for prestation in prestations %}
    <div class="prestation" style="text-align:center;">
        <form method="post" action="{{ path('modifier_prestation') }}">
            <input type="hidden" name="id" value="{{ prestation.id }}">
            
            <input type="text" name="titre" value="{{ prestation.titrePresta }}" class="form-control">
            <textarea name="description" class="form-control" rows="17" style="width: 14rem;">{{ prestation.descriptionPresta }}</textarea>
            <input type="number" name="prix" value="{{ prestation.prix }}" step="0.01" class="form-control">

            <button type="submit" class="btn btn-primary btn-submit" style="margin-top: 5px;">Modifier</button>
        </form>
        <form method="post" action="{{ path('supprimer_prestation', {'id': prestation.id}) }}" style="display: inline;margin-top: 5px;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette prestation ?');">
            <button type="submit" class="btn btn-secondary btn-cancel">Supprimer</button>
        </form>
    </div>
    {% else %}
    <p>Aucune prestation</p>
    {% endfor %}
</div>
<div style="display: flex; justify-content: center;">
    <form class="d-flex" action="{{path('app_prestation_ajout')}}">
    <button type="submit" class="btn btn-connexion my-2 my-sm-0">Ajouter</button></form></div>
{% endif %}
{% endblock %}
